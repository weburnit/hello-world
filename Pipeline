pipeline {
  environment {
    registry = "weburnit/hello-world"
    registryCredential = 'weburnit'
    dockerImage = ''
  }
  agent any
  stages {

    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
    stage('Remove Unused docker image') {
      steps{
        sh "docker rmi $registry:$BUILD_NUMBER"
      }
    }
    stage('Update Helm') {
      steps{
          sh '''
          helm upgrade --install ${SERVICE_NAME} lancar/go-base --set image.repository=$registry --set image.tag=$BUILD_NUMBER
          '''
      }
    }
  }
}